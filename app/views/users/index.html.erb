<h2>Users Index</h2>
<%= link_to 'New User', new_user_path, class:"btn btn-info" %>

<table class="table table-bordered">


<p id="notice"><%= notice %></p>

<h1>Users List</h1>

  <thead>
    <tr class="info table table-hove">

      <th class="info">User Name</th>
      <th class="info">User Email</th>
      <th class="info">User Age</th>
      <th class="info">Image</th>
      <th class="info">Is Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

<!-- <ol> -->
  <% @users.each do |user| %>
  <tr>



  <td class="info"><%= user.name %></td>
  <td class="info"><%= user.email%></td>
  <td class="info"><%= cl_image_tag(user.image, :alt => "post image")%> </td>
  <td class="info"><%= link_to 'Show',user, class:"btn btn-info"  %></td>
  <td class="info"><%= link_to 'Edit', edit_user_path(user), class:"btn btn-info"  %></td>
  <td class="info"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-info" %></td>
</tr>
<% end %>
</tbody>

<br>
</table>
