    <ol>
      <% @user.liked_comments.each do |u| %>

      comment title:
      <li><%= link_to u.title,  comment_path(u.id), class:"btn btn-primary" %><%= link_to cl_image_tag(u.image),user_path(u.id),  class:"img-rounded", width:"304", height:"236" %></li>

      <% end %>

    </ol>
    <%= link_to "All Comments" , comments_path, class:"btn btn-primary" %>

    <h2>Posts
      <%=@user.name%>
      likes:
    </h2>
    <ol>
      <% @user.liked_posts.each do |u| %>

      post title:<li><%= link_to u.title,  post_path(u.id), class:"btn btn-primary"  %><%= link_to cl_image_tag(u.image),user_path(u.id),  class:"img-rounded", width:"304", height:"236" %></li>

      <% end %>
    </ol>

    <hr>

    <!-- <%= link_to "ALl Comments" , comments_path, class:"btn btn-primary" %> -->

    <%= link_to "Find Friends", users_path, class:"btn btn-primary"%>
    <br><br>
    <%= link_to "All Users", users_path, class:"btn btn-primary"%>
  </div>
</div>
