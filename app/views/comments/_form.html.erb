  <%= form_for @comment, html: {multipart: true} do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <br>
    <%= f.label :post_id %>
    <%= f.text_field :post_id %>
    <br>
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
    <br>

    <%= f.label :image %>
    <%= f.cl_image_upload :image %>
    <br>

    <%= f.submit %>

  <% end %>
