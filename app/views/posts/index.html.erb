<%= link_to 'New Post', new_post_path, class:"btn btn-info" %>

<table class="table table-bordered">


<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<!-- <table> -->
  <thead>
    <tr class="info table table-hove">

      <th class="info">Title</th>
      <th class="info">User</th>
      <th class="info">Content</th>
      <th class="info">Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td class="info"><%= post.title %></td>
        <td class="info"><%= post.user_id %></td>
        <td class="info"><%= post.content %></td>
        <td class="info"><%= image_tag(post.image, :alt => "post image")%> </td>
        <td class="info"><%= link_to 'Show', post, class:"btn btn-info"  %></td>
        <td class="info"><%= link_to 'Edit', edit_post_path(post), class:"btn btn-info"  %></td>
        <td class="info"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>

<br>
</table>
